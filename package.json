{
  "name": "morning-briefing-generator",
  "version": "1.0.0",
  "type": "module",
  "description": "Generate a comprehensive morning briefing with weather, news, and content updates",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "ncc build dist/index.js -o dist/bundle --minify",
    "build-bundle": "npm run build && npm run bundle",
    "dev": "tsx src/index.ts",
    "generate": "node dist/index.js",
    "generate-bundled": "node dist/bundle/index.js",
    "start": "npm run build && npm run generate"
  },
  "dependencies": {
    "rss-parser": "^3.13.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@vercel/ncc": "^0.38.1",
    "typescript": "^5.4.0",
    "tsx": "^4.16.0"
  },
  "keywords": ["weather", "news", "briefing", "rss", "automation"],
  "author": "Danny",
  "license": "MIT"
}